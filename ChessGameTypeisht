

from kivy.app import App
from kivy.uix.gridlayout import GridLayout
from kivy.uix.image import Image

class ChessBoard(App):
    def build(self):
        root = GridLayout(rows=8, cols=8)
        for i in range(8):
            for j in range(8):
                img = "C:/Users/Lenovo/OneDrive/Desktop/white-imgs.png" if (i+j)%2==0 else "C:/Users/Lenovo/OneDrive/Desktop/black-imgs.jpeg"
                root.add_widget(Image(source=img))
        return root

ChessBoard().run()





