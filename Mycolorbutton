



from kivy.app import App
from kivy.uix.gridlayout import GridLayout
from kivy.uix.button import Button
from kivy.core.window import Window

RED = (1, 0, 0, 1)
YELLOW = (1, 1, 0, 1)
BLUE = (0, 0, 1, 1)
GREEN = (0, 1, 0, 1)
DEFAULT_TEXT = (1, 1, 1, 1)
DEFAULT_BTN_BG = (1, 1, 1, 1)

class ColorApp(App):
    def build(self):
        root = GridLayout(rows=2, cols=1, padding=10, spacing=10)

  
        top = GridLayout(cols=2, spacing=10)
        button_red = Button(text='Red', background_color=DEFAULT_BTN_BG, color=DEFAULT_TEXT, size_hint_x=None, size_hint_y=None, width=300, height=300, font_size=50)
        button_yellow = Button(text='Yellow', background_color=DEFAULT_BTN_BG, color=DEFAULT_TEXT, size_hint_x=None, size_hint_y=None, width=300, height=300, font_size=50)

       
        bottom = GridLayout(cols=2, spacing=10)
        button_blue = Button(text='Blue', background_color=DEFAULT_BTN_BG, color=DEFAULT_TEXT, size_hint_x=None, size_hint_y=None, width=300, height=300, font_size=25)
        button_green = Button(text='Green', background_color=DEFAULT_BTN_BG, color=DEFAULT_TEXT, size_hint_x=None, size_hint_y=None, width=300, height=300, font_size=25)

       
        button_red.my_color = RED
        button_yellow.my_color = YELLOW
        button_blue.my_color = BLUE
        button_green.my_color = GREEN

        
        def top_pressed(instance):
            instance.color = instance.my_color    
            Window.clearcolor = instance.my_color 

       
        def bottom_pressed(instance):
            instance.background_color = instance.my_color
            instance.color = DEFAULT_TEXT
            Window.clearcolor = instance.my_color

        
        button_red.bind(on_press=top_pressed)
        button_yellow.bind(on_press=top_pressed)
        button_blue.bind(on_press=bottom_pressed)
        button_green.bind(on_press=bottom_pressed)

        top.add_widget(button_red)
        top.add_widget(button_yellow)
        bottom.add_widget(button_blue)
        bottom.add_widget(button_green)

        root.add_widget(top)
        root.add_widget(bottom)

        return root



ColorApp().run()
